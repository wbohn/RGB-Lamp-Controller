<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wbohn.rgblamp.MainActivity"
    android:orientation="vertical">

    <FrameLayout android:id="@+id/container_fragment_fade_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
    </FrameLayout>

    <fragment android:name="com.wbohn.rgblamp.color_circle.ColorCircleFragment"
        android:id="@+id/fragment_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <FrameLayout android:id="@+id/container_fragment_swap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:padding="@dimen/color_circle_save_padding"
        android:background="@color/divider"/>
</LinearLayout>
