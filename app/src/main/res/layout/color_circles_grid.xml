<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/color_circle_padding"
        android:layout_gravity="center">
        <com.wbohn.rgblamp.color_circle.ColorCircleButton
            android:id="@+id/button_circle_two"
            android:background="@drawable/circle"
            android:layout_width="@dimen/color_circle_button_width"
            android:layout_height="@dimen/color_circle_button_height"
            android:paddingLeft="@dimen/color_circle_padding"
            android:paddingBottom="@dimen/color_circle_padding"/>
        <Space
            android:layout_width="@dimen/color_circle_button_width"
            android:layout_height="@dimen/color_circle_button_height" />

        <com.wbohn.rgblamp.color_circle.ColorCircleButton
            android:id="@+id/button_circle_four"
