<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icons">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/color_circle_padding"
            android:layout_gravity="center">
            <com.wbohn.rgblamp.color_circle.ColorCircleButton
                android:id="@+id/button_circle_two"
                android:background="@drawable/circle"
                android:layout_width="@dimen/color_circle_button_width"
                android:layout_height="@dimen/color_circle_button_height"
                android:paddingLeft="@dimen/color_circle_padding"
                android:paddingBottom="@dimen/color_circle_padding"/>
            <Space
                android:layout_width="@dimen/color_circle_button_width"
                android:layout_height="@dimen/color_circle_button_height" />

            <com.wbohn.rgblamp.color_circle.ColorCircleButton
                android:id="@+id/button_circle_four"
                android:background="@drawable/circle"
                android:layout_width="@dimen/color_circle_button_width"
                android:layout_height="@dimen/color_circle_button_height"
                android:paddingLeft="@dimen/color_circle_padding"
                android:paddingBottom="@dimen/color_circle_padding" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/color_circle_padding"
            android:layout_gravity="center">
            <com.wbohn.rgblamp.color_circle.ColorCircleButton
                android:id="@+id/button_circle_one"
                android:background="@drawable/circle"
                android:layout_width="@dimen/color_circle_button_width"
                android:layout_height="@dimen/color_circle_button_height"
                android:paddingLeft="@dimen/color_circle_padding"
                android:paddingBottom="@dimen/color_circle_padding" />

            <Space
                android:layout_width="@dimen/color_circle_button_width"
                android:layout_height="@dimen/color_circle_button_height" />
            <com.wbohn.rgblamp.color_circle.ColorCircleButton
                android:id="@+id/button_circle_three"
                android:background="@drawable/circle"
                android:layout_width="@dimen/color_circle_button_width"
                android:layout_height="@dimen/color_circle_button_height"
                android:paddingLeft="@dimen/color_circle_padding"
                android:paddingBottom="@dimen/color_circle_padding" />
            <Space
                android:layout_width="@dimen/color_circle_button_width"
                android:layout_height="@dimen/color_circle_button_height" />
            <com.wbohn.rgblamp.color_circle.ColorCircleButton
                android:id="@+id/button_circle_five"
                android:background="@drawable/circle"
                android:layout_width="@dimen/color_circle_button_width"
                android:layout_height="@dimen/color_circle_button_height"
                android:paddingLeft="@dimen/color_circle_padding"
                android:paddingBottom="@dimen/color_circle_padding" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
